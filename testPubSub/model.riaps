// RIAPS Test
// Two actors, A and B, subscribe to each other

app testPubSub {
    message topicA;
    message topicB;

    component A(logfile = "") {
      pub pubPort : topicA;
      sub subPort : topicB;
      timer clock 10000;
    }

    component B(logfile = "") {
      sub subPort : topicA;
      pub pubPort : topicB;
    }

    actor actorA(logfile = "ActorA") {
       {
          compA : A(logfile = logfile);
       }
    }

    actor actorB(logfile = "ActorB") {
       {
          compB : B(logfile = logfile);
       }
    }
}
